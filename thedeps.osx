#!/bin/sh

HERE="$(cd "$(dirname "$0")" && pwd)"

#LOG_FILE="$(mktemp -t "thedeps.$$")"
LOG_FILE=/dev/stderr

# FIXME(strager): Escaping isn't quite right here.  Might be
# a dtrace issue.
COMMAND="$@"

/usr/sbin/dtrace \
    -x evaltime=exec \
    -s "$HERE/thedeps.d" \
    -c "$COMMAND" \
    -o "$LOG_FILE"

echo "Logged to $LOG_FILE"
